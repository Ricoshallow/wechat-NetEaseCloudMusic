/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

/* 图标导航区域 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
  padding: 20rpx ;

}
.header .more {
  float: right;
  border: 1rpx solid #333;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}


/* 推荐内容区 */
.recommendScroll {
  /* display: flex; */
  /* white-space: nowrap; */
  margin: 20rpx 0;
  
}
.scrollview {
  display: flex;
}
.scollItem {
  /* display: inline-block; */
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}

.scollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  /* display: block; */
}

.scollItem text {
  font-size: 26rpx;
  text-align: center;
  /* 单行文本溢出隐藏 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block; */
  /* 多行文本溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}